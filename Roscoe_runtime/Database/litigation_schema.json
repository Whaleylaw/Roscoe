{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Litigation Tracking Schema",
  "description": "Tracks litigation milestones and deadlines for cases in litigation",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["project_name"],
    "properties": {
      "id": {
        "type": "integer",
        "description": "Unique litigation record ID"
      },
      "project_name": {
        "type": "string",
        "description": "Project/case name (e.g., 'Amy-Mills-Premise-04-26-2019')"
      },
      "client_name": {
        "type": "string",
        "description": "Client full name"
      },
      "case_number": {
        "type": "string",
        "description": "Court case number (e.g., '24-CI-12345')"
      },
      "court": {
        "type": "string",
        "description": "Court name (e.g., 'Jefferson Circuit Court', 'Knox Circuit Court')"
      },
      "judge": {
        "type": "string",
        "description": "Assigned judge name"
      },
      "opposing_counsel": {
        "type": "string",
        "description": "Defense attorney name"
      },
      "opposing_counsel_email": {
        "type": "string",
        "description": "Defense attorney email"
      },
      "opposing_counsel_phone": {
        "type": "string",
        "description": "Defense attorney phone"
      },
      "complaint_filed_date": {
        "type": "string",
        "format": "date",
        "description": "Date complaint/petition filed (YYYY-MM-DD)"
      },
      "complaint_served_date": {
        "type": "string",
        "format": "date",
        "description": "Date complaint served on defendant (YYYY-MM-DD)"
      },
      "answer_filed_date": {
        "type": "string",
        "format": "date",
        "description": "Date defendant filed answer (YYYY-MM-DD)"
      },
      "answer_due_date": {
        "type": "string",
        "format": "date",
        "description": "Answer deadline (typically 20-30 days after service)"
      },
      "interrogatories_sent_to_defendant_date": {
        "type": "string",
        "format": "date",
        "description": "Date plaintiff sent interrogatories to defendant"
      },
      "requests_for_production_sent_to_defendant_date": {
        "type": "string",
        "format": "date",
        "description": "Date plaintiff sent requests for production to defendant"
      },
      "interrogatories_received_from_defendant_date": {
        "type": "string",
        "format": "date",
        "description": "Date defendant served interrogatories on plaintiff"
      },
      "requests_for_production_received_from_defendant_date": {
        "type": "string",
        "format": "date",
        "description": "Date defendant served requests for production on plaintiff"
      },
      "plaintiff_reply_to_interrogatories_date": {
        "type": "string",
        "format": "date",
        "description": "Date plaintiff filed responses to defendant's interrogatories"
      },
      "plaintiff_reply_to_requests_for_production_date": {
        "type": "string",
        "format": "date",
        "description": "Date plaintiff filed responses to defendant's requests for production"
      },
      "defendant_reply_to_interrogatories_date": {
        "type": "string",
        "format": "date",
        "description": "Date defendant filed responses to plaintiff's interrogatories"
      },
      "defendant_reply_to_requests_for_production_date": {
        "type": "string",
        "format": "date",
        "description": "Date defendant filed responses to plaintiff's requests for production"
      },
      "plaintiff_deposition_date": {
        "type": "string",
        "format": "date",
        "description": "Date of plaintiff's deposition"
      },
      "plaintiff_deposition_transcript_received": {
        "type": "boolean",
        "description": "Whether plaintiff deposition transcript has been received"
      },
      "defendant_deposition_date": {
        "type": "string",
        "format": "date",
        "description": "Date of defendant's deposition (or primary defendant if multiple)"
      },
      "defendant_deposition_transcript_received": {
        "type": "boolean",
        "description": "Whether defendant deposition transcript has been received"
      },
      "additional_depositions": {
        "type": "array",
        "description": "Other depositions (witnesses, experts, etc.)",
        "items": {
          "type": "object",
          "properties": {
            "deponent_name": {
              "type": "string",
              "description": "Name of person being deposed"
            },
            "deponent_role": {
              "type": "string",
              "description": "Role (e.g., 'Witness', 'Expert', 'Corporate Representative')"
            },
            "deposition_date": {
              "type": "string",
              "format": "date"
            },
            "transcript_received": {
              "type": "boolean"
            },
            "transcript_received_date": {
              "type": "string",
              "format": "date"
            }
          }
        }
      },
      "discovery_cutoff_date": {
        "type": "string",
        "format": "date",
        "description": "Discovery deadline/cutoff date"
      },
      "expert_designation_deadline": {
        "type": "string",
        "format": "date",
        "description": "Deadline to designate expert witnesses"
      },
      "dispositive_motions_deadline": {
        "type": "string",
        "format": "date",
        "description": "Deadline for summary judgment motions"
      },
      "mediation_scheduled": {
        "type": "boolean",
        "description": "Whether mediation is scheduled"
      },
      "mediation_date": {
        "type": "string",
        "format": "date",
        "description": "Scheduled mediation date"
      },
      "mediation_completed": {
        "type": "boolean",
        "description": "Whether mediation occurred"
      },
      "mediation_result": {
        "type": "string",
        "enum": ["settled", "impasse", "partial_settlement", "cancelled"],
        "description": "Outcome of mediation"
      },
      "trial_date": {
        "type": "string",
        "format": "date",
        "description": "Scheduled trial date"
      },
      "trial_continued_to": {
        "type": "string",
        "format": "date",
        "description": "New trial date if continued"
      },
      "pretrial_conference_date": {
        "type": "string",
        "format": "date",
        "description": "Pre-trial conference date"
      },
      "next_court_date": {
        "type": "string",
        "format": "date",
        "description": "Next scheduled court appearance (any type)"
      },
      "next_court_date_purpose": {
        "type": "string",
        "description": "Purpose of next court date (e.g., 'Status Conference', 'Motion Hearing', 'Trial')"
      },
      "discovery_disputes": {
        "type": "array",
        "description": "Active discovery disputes",
        "items": {
          "type": "object",
          "properties": {
            "dispute_type": {
              "type": "string",
              "description": "Type (e.g., 'Motion to Compel', 'Objection to Production')"
            },
            "filed_date": {
              "type": "string",
              "format": "date"
            },
            "status": {
              "type": "string",
              "enum": ["pending", "resolved", "hearing_scheduled"],
              "description": "Current status"
            },
            "hearing_date": {
              "type": "string",
              "format": "date"
            },
            "resolution": {
              "type": "string",
              "description": "How dispute was resolved"
            }
          }
        }
      },
      "motions_filed": {
        "type": "array",
        "description": "All motions filed in the case",
        "items": {
          "type": "object",
          "properties": {
            "motion_type": {
              "type": "string",
              "description": "Type of motion (e.g., 'Motion for Summary Judgment', 'Motion to Dismiss')"
            },
            "filed_by": {
              "type": "string",
              "enum": ["plaintiff", "defendant"],
              "description": "Which party filed"
            },
            "filed_date": {
              "type": "string",
              "format": "date"
            },
            "hearing_date": {
              "type": "string",
              "format": "date"
            },
            "ruling": {
              "type": "string",
              "enum": ["granted", "denied", "granted_in_part", "pending"],
              "description": "Court's ruling"
            },
            "ruling_date": {
              "type": "string",
              "format": "date"
            }
          }
        }
      },
      "status": {
        "type": "string",
        "enum": ["active", "settled", "dismissed", "judgment", "appealed"],
        "description": "Current litigation status"
      },
      "settlement_offers": {
        "type": "array",
        "description": "Settlement offers during litigation",
        "items": {
          "type": "object",
          "properties": {
            "offer_date": {
              "type": "string",
              "format": "date"
            },
            "offered_by": {
              "type": "string",
              "enum": ["plaintiff", "defendant"]
            },
            "amount": {
              "type": "number",
              "description": "Offer amount in dollars"
            },
            "response": {
              "type": "string",
              "enum": ["accepted", "rejected", "countered", "pending"],
              "description": "Response to offer"
            },
            "response_date": {
              "type": "string",
              "format": "date"
            }
          }
        }
      },
      "notes": {
        "type": "string",
        "description": "General litigation notes and status updates"
      },
      "last_updated": {
        "type": "string",
        "format": "date-time",
        "description": "Last time this record was updated"
      }
    }
  }
}
