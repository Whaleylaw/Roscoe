      "tools_manifest": "workflows/tools/tools_manifest.json",
      "skills_manifest": "workflows/skills/skills_manifest.json",
      "templates_manifest": "workflows/templates/templates_manifest.json"
    },
    "phase_7_litigation": {
      "workflow_dir": "workflows/phase_7_litigation/",
      "tools_manifest": "workflows/tools/tools_manifest.json",
      "skills_manifest": "workflows/skills/skills_manifest.json",
      "templates_manifest": "workflows/templates/templates_manifest.json"
    },
    "phase_8_closed": {
      "workflow_dir": "workflows/phase_8_closed/",
      "tools_manifest": "workflows/tools/tools_manifest.json",
      "skills_manifest": "workflows/skills/skills_manifest.json",
      "templates_manifest": "workflows/templates/templates_manifest.json"
    }
  }
}
