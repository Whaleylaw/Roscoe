# =============================================================================
# ANTHROPIC API (REQUIRED)
# =============================================================================
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# OPENAI API (REQUIRED for GPT-4 subagents)
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# SUPABASE DATABASE (REQUIRED)
# =============================================================================
# Get from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Database connection string for Postgres
# Format: postgresql://postgres:[PASSWORD]@db.[PROJECT].supabase.co:5432/postgres
POSTGRES_CONNECTION_STRING=postgresql://postgres:your_password@db.your-project.supabase.co:5432/postgres

# =============================================================================
# TAVILY SEARCH API (REQUIRED for legal research)
# =============================================================================
# Get your API key from: https://tavily.com
TAVILY_API_KEY=your_tavily_api_key_here

# =============================================================================
# GOOGLE CALENDAR API (OPTIONAL)
# =============================================================================
# Create OAuth credentials at: https://console.cloud.google.com/
# Download the JSON and paste the full contents here
GOOGLE_CALENDAR_CREDENTIALS={"installed":{"client_id":"...","project_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_secret":"...","redirect_uris":["..."]}}

# =============================================================================
# GMAIL API (OPTIONAL)
# =============================================================================
# Create OAuth credentials at: https://console.cloud.google.com/
# Download the JSON and paste the full contents here
GMAIL_CREDENTIALS={"installed":{"client_id":"...","project_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_secret":"...","redirect_uris":["..."]}}

# =============================================================================
# ELEVENLABS TEXT-TO-SPEECH (OPTIONAL)
# =============================================================================
# Get your API key from: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# =============================================================================
# LANGSMITH (OPTIONAL - for observability and debugging)
# =============================================================================
# Get your API key from: https://smith.langchain.com/
# LANGSMITH_API_KEY=your_langsmith_api_key_here
# LANGSMITH_TRACING=true
# LANGSMITH_PROJECT=whaley-legal-agent

# =============================================================================
# RUNLOOP (REQUIRED for code execution sandbox)
# =============================================================================
# Get your API key from: https://runloop.ai
RUNLOOP_API_KEY=your_runloop_api_key_here
